<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:gravity="center_vertical|center_horizontal"
    android:baselineAligned="false"
    >

    <com.skyfishjy.library.RippleBackground
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="232dp"
        android:layout_height="229dp"
        android:id="@+id/content"
        app:rb_color="#C5E5E4"
        app:rb_radius="20dp"
        app:rb_rippleAmount="2"
        app:rb_duration="3000"
        app:rb_scale="6"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="1dp"
        android:layout_marginRight="-45dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:id="@+id/centerImage"
            android:background="@drawable/image"/>
    </com.skyfishjy.library.RippleBackground>

    <TextView
        android:id="@+id/answer"
        android:layout_width="280dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="52dp"
        android:text="Make me a Capuccino"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="#73BEC8"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp" />

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="277dp"
        android:layout_height="108dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="52dp"
        android:text="I can't do that, but this is a list of things I can do for you instead."
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="@id/answer"
        />

    <Button
        android:id="@+id/registrationForm"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="277dp"
        android:layout_height="42dp"
        android:background="#308BCBCA"
        android:text="Registration Form"
        android:textAllCaps="false"
        android:textColor="#73BEC8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcome_text"
        android:textAlignment="viewStart"
        android:paddingLeft="15dip"
        android:fontFamily="@font/AvenirNext"
        app:layout_constraintHorizontal_bias="0.504"
        android:layout_marginBottom="0dp" />

    <Button
        android:id="@+id/satisfactionForm"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="277dp"
        android:layout_height="42dp"
        android:background="#308BCBCA"
        android:text="Satisfaction Form"
        android:textAllCaps="false"
        android:textColor="#73BEC8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registrationForm"
        android:layout_marginTop="10dp"
        android:textAlignment="viewStart"
        android:paddingLeft="15dip"
        android:fontFamily="@font/AvenirNext"
        />

    <Button
        android:id="@+id/contactForm"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="277dp"
        android:layout_height="42dp"
        android:background="#308BCBCA"
        android:text="Contact Form"
        android:textAllCaps="false"
        android:textColor="#73BEC8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/satisfactionForm"
        android:layout_marginTop="10dp"
        android:textAlignment="viewStart"
        android:paddingLeft="15dip"
        android:fontFamily="@font/AvenirNext"
        />

    <Button
        android:id="@+id/scratch"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="277dp"
        android:layout_height="42dp"
        android:background="#308BCBCA"
        android:text="Start from scratch"
        android:textAllCaps="false"
        android:textColor="#73BEC8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contactForm"
        android:layout_marginTop="10dp"
        android:textAlignment="viewStart"
        android:paddingLeft="15dip"
        android:fontFamily="@font/AvenirNext"
        />


    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</android.support.constraint.ConstraintLayout>

