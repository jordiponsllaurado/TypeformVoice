<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content_main"
    tools:context="com.google.cloud.android.speech.MainActivity">

    <com.skyfishjy.library.RippleBackground
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="232dp"
        android:layout_height="229dp"
        android:id="@+id/content"
        app:rb_color="#C5E5E4"
        app:rb_radius="20dp"
        app:rb_rippleAmount="2"
        app:rb_duration="3000"
        app:rb_scale="6"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="1dp"
        android:layout_marginRight="-45dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:id="@+id/centerImage"
            android:background="@drawable/image"/>
    </com.skyfishjy.library.RippleBackground>

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="277dp"
        android:layout_height="148dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="52dp"
        android:fontFamily="@+font/AvenirNext"
        android:text="Your Typeform is Done!"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/isok"
        android:layout_width="277dp"
        android:layout_height="108dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="52dp"
        android:fontFamily="@+font/AvenirNext"
        android:text="Do you want to send it out?"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="90dp"
        app:layout_constraintTop_toTopOf="@id/welcome_text"/>


    <Button
        android:id="@+id/email"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="277dp"
        android:layout_height="42dp"
        android:background="#308BCBCA"
        android:text="Send Form"
        android:textAllCaps="false"
        android:textColor="#73BEC8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/isok"
        android:layout_marginTop="10dp"
        android:textAlignment="viewStart"
        android:paddingLeft="15dip"
        android:fontFamily="@font/AvenirNext"
        />

</android.support.constraint.ConstraintLayout>

